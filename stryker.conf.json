{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "Configuration for Stryker Mutation Testing in Angular PWA",
  "packageManager": "npm",
  "reporters": ["progress", "clear-text", "html", "dashboard"],
  "testRunner": "karma",
  "testRunnerNodeArgs": ["--max_old_space_size=4096"],
  "karma": {
    "configFile": "karma.conf.js",
    "projectType": "angular-cli",
    "config": {
      "browsers": ["ChromeHeadless"]
    }
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/app/services/**/*.ts",
    "src/app/models/**/*.ts",
    "src/app/validators/**/*.ts",
    "!src/app/**/*.spec.ts",
    "!src/app/**/*.a11y.spec.ts",
    "!src/app/test-helpers/**/*.ts"
  ],
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "typescriptChecker": {
    "enabled": true,
    "prioritizePerformanceOverAccuracy": false
  },
  "timeoutMS": 30000,
  "timeoutFactor": 2,
  "maxConcurrentTestRunners": 2,
  "logLevel": "info",
  "cleanTempDir": "always",
  "tempDirName": ".stryker-tmp",
  "htmlReporter": {
    "baseDir": "reports/mutation"
  },
  "dashboard": {
    "project": "conductores-pwa",
    "version": "main",
    "module": "core-services"
  },
  "plugins": [
    "@stryker-mutator/karma-runner",
    "@stryker-mutator/typescript-checker",
    "@stryker-mutator/html-reporter"
  ],
  "mutator": {
    "plugins": null,
    "excludedMutations": [
      "StringLiteral",
      "BooleanLiteral"
    ]
  },
  "thresholds": {
    "high": 90,
    "low": 70,
    "break": 60
  },
  "ignorePatterns": [
    "src/app/**/*.spec.ts",
    "src/app/**/*.a11y.spec.ts",
    "src/app/test-helpers/**/*",
    "src/app/mocks/**/*",
    "src/environments/**/*",
    "**/*.d.ts"
  ],
  "ignoreStatic": true,
  "incrementalFile": "reports/stryker-incremental.json",
  "force": false,
  "dryRunOnly": false,
  "allowConsoleColors": true,
  "fileLogLevel": "info",
  "appendPlugins": [],
  "commandRunner": {
    "command": "ng test --watch=false --browsers=ChromeHeadless"
  }
}