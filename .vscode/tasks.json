    {
      "label": "Quality Gates",
      "type": "npm",
      "script": "quality:gates",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
