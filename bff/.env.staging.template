# ===============================================
# BFF STAGING ENVIRONMENT TEMPLATE
# ===============================================
# Copy to .env.staging and fill with real values

# === Database & Core ===
NODE_ENV=staging
PORT=3000
DATABASE_URL=postgresql://user:password@staging.host/conductores_staging
JWT_SECRET=your-jwt-secret-here-staging

# === OpenAI / Voice Analysis ===
OPENAI_API_KEY=sk-your-openai-key-here

# === Odoo ERP Integration ===
ODOO_BASE_URL=https://odoo.staging.conductores.lat
ODOO_DB_NAME=conductores_staging
ODOO_USERNAME=api_user
ODOO_PASSWORD=your-odoo-password
ODOO_API_KEY=your-odoo-api-key

# === NEON Corebanking ===
NEON_DB_URL=postgresql://neon_user:password@neon.staging.host/banking_db
NEON_API_KEY=your-neon-api-key
NEON_API_BASE_URL=https://api.staging.neon.tech

# === MetaMap (Identity Verification) ===
METAMAP_CLIENT_ID=your-metamap-client-id
METAMAP_FLOW_ID=your-metamap-flow-id
METAMAP_SECRET=your-metamap-secret
METAMAP_API_BASE_URL=https://api.staging.metamap.com

# === Conekta (Payments) ===
CONEKTA_PUBLIC_KEY=key_staging_your-public-key
CONEKTA_PRIVATE_KEY=key_staging_your-private-key
CONEKTA_WEBHOOK_SECRET=your-conekta-webhook-secret

# === Mifiel (Digital Signatures) ===
MIFIEL_APP_ID=your-mifiel-app-id
MIFIEL_SECRET=your-mifiel-secret
MIFIEL_WEBHOOK_URL=https://bff.staging.conductores.lat/webhooks/mifiel
MIFIEL_API_BASE_URL=https://api.staging.mifiel.com

# === GNV (Natural Gas Stations) ===
GNV_STORAGE_BUCKET=gnv-staging-bucket
GNV_WEBHOOK_URL=https://bff.staging.conductores.lat/webhooks/gnv
GNV_API_KEY=your-gnv-api-key

# === Twilio / WhatsApp Business ===
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# === AWS Services ===
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=conductores-staging-uploads

# === Redis (Caching & Sessions) ===
REDIS_URL=redis://staging.redis.host:6379
REDIS_PASSWORD=your-redis-password

# === Email Services (SendGrid) ===
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@staging.conductores.lat

# === Monitoring & Logging ===
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=debug

# === Feature Flags ===
ENABLE_AVI_VOICE_ANALYSIS=true
ENABLE_HASE_MODEL=true
ENABLE_TANDA_COLECTIVA=true
ENABLE_GNV_MODULE=true
ENABLE_PROTECTION_PRODUCTS=true

# === Webhook URLs ===
WEBHOOK_BASE_URL=https://bff.staging.conductores.lat
FRONTEND_BASE_URL=https://staging.conductores.lat

# === Rate Limiting ===
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# === CORS Origins ===
ALLOWED_ORIGINS=https://staging.conductores.lat,https://app.staging.conductores.lat,http://localhost:4200